# API 설정
API_V1_STR=/api/v1
PROJECT_NAME=YOLO ROI Detection API
VERSION=1.0.0

# CORS 설정 (프론트엔드 주소)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Redis 설정 (세션 관리)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
USE_REDIS=true

# 데이터베이스 설정
DATABASE_URL=sqlite+aiosqlite:///./yolo_detection.db

# YOLO 모델 설정
DEFAULT_YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
DETECTION_INTERVAL_SECONDS=1.0

# 세션 설정
SESSION_EXPIRE_MINUTES=60
MAX_SESSIONS=100

# 보안 설정 (프로덕션에서는 반드시 변경!)
SECRET_KEY=your-secret-key-change-in-production-YOLO-ROI-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# WebSocket 설정
WS_HEARTBEAT_INTERVAL=30

# 업로드 설정
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads
